CASE 
    /* Student Loans - All Provincial & Federal */
    WHEN LN_DESC IN ('ALTA-A', 'ALTA-B', 'B.C.-A', 'B.C.-B', 'CAN-A', 'CAN-B', 'FEDDIR',
                     'FRALTB', 'FRBCB', 'FRCANB', 'FRMANB', 'FRNBB', 'FRNFLB', 'FRNSB', 'FRPEIB', 'FRSKB',
                     'MAN-A', 'MAN-B', 'N.S.-A', 'N.S.-B', 'ONT-A', 'ONT-B', 'QUE-A', 'QUE-B',
                     'VRALTA', 'VRALTB', 'VRBCA', 'VRBCB', 'VRCANA', 'VRCANB', 'VRMANA', 'VRMANB',
                     'VRNBA', 'VRNBB', 'VRNFLA', 'VRNFLB', 'VRNSA', 'VRNSB', 'VRPEIA', 'VRPEIB', 'VRSKA', 'VRSKB')
    THEN 'Student Loan'
    
    /* Personal Lending */
    WHEN LN_DESC IN ('AUTOPL', 'AUTONP', 'FIXED', 'FR', 'INSTAL', 'N.TERM', 'SMLBUS', 
                     'TER_LN', 'TIMRG', 'TP/PC', 'VR', 'V.R.LN', 'HIL')
    THEN 'Personal Loan'
    
    /* Revolving Credit */
    WHEN LN_DESC IN ('RCL', 'RCLSBC', 'RCLSEC')
    THEN 'Revolving Credit'
    
    /* Business & Commercial */
    WHEN LN_DESC IN ('ASSCOR', 'CITETC', 'CONSUB', 'CSBMSP', 'DEMAND', 'IBVRDM', 'INDBUS', 
                     'OTH-BR', 'PRVGOV')
    THEN 'Business & Commercial'
    
    /* Agriculture & Resource Lending */
    WHEN LN_DESC IN ('ROYFRM', 'ROYFRMD', 'RFRMRG', 'INDFSH', 'FSHDMD', 'GRNOTH', 'GRNWHT')
    THEN 'Agriculture & Resource'
    
    /* Trade Finance */
    WHEN LN_DESC IN ('TB-DMD', 'TB-TER', 'TBPREC', 'TBTIME')
    THEN 'Trade Finance'
    
    /* Government/Bond Products */
    WHEN LN_DESC IN ('G/GOTH', 'G/GUAR', 'GGSBDB', 'PRVGOV', 'PSBPSP', 'SBDB', 'SMLBUS')
    THEN 'Government/Bond'
    
    /* Foreign Currency (US Dollar) */
    WHEN LN_DESC IN ('US-B/A', 'US-DMD', 'US-LIB', 'US-TRB', 'USTIME')
    THEN 'US Dollar Loan'
    
    /* Specialty/Structured/Pooled */
    WHEN LN_DESC IN ('PL-FP', 'PL_FR', 'PL-LP', 'PL-RR', 'CSBPSP', 'ODWOCB')
    THEN 'Specialty/Structured'
    
    /* Staff/Internal */
    WHEN LN_DESC IN ('STAFF', 'OTH-BR')
    THEN 'Staff/Internal'
    
    ELSE 'Other'
END AS LOAN_CATEGORY