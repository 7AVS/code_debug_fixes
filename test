CASE 
    /* AUTO LOANS */
    WHEN LN_DESC IN ('AUTOPL', 'AUTONP')
    THEN 'Auto Loan'
    
    /* PERSONAL LOANS - Unsecured/General Purpose */
    WHEN LN_DESC IN ('FR', 'FIXED', 'VR', 'V.R.LN', 'INSTAL', 'N.TERM', 'TER_LN', 'TIMRG', 'HIL')
    THEN 'Personal Loan'
    
    /* INDIRECT LENDING */
    WHEN LN_DESC IN ('FRINLN')
    THEN 'Indirect Loan'
    
    /* REVOLVING CREDIT */
    WHEN LN_DESC IN ('RCL', 'RCLSBC', 'RCLSEC')
    THEN 'Revolving Credit'
    
    /* STUDENT LOANS */
    WHEN LN_DESC IN ('ALTA-A', 'ALTA-B', 'B.C.-A', 'B.C.-B', 'CAN-A', 'CAN-B', 'FEDDIR',
                     'FRALTB', 'FRBCB', 'FRCANB', 'FRMANB', 'FRNBB', 'FRNFLB', 'FRNSB', 'FRPEIB', 'FRSKB',
                     'MAN-A', 'MAN-B', 'N.S.-A', 'N.S.-B', 'ONT-A', 'ONT-B', 'QUE-A', 'QUE-B',
                     'VRALTA', 'VRALTB', 'VRBCA', 'VRBCB', 'VRCANA', 'VRCANB', 'VRMANA', 'VRMANB',
                     'VRNBA', 'VRNBB', 'VRNFLA', 'VRNFLB', 'VRNSA', 'VRNSB', 'VRPEIA', 'VRPEIB', 'VRSKA', 'VRSKB')
    THEN 'Student Loan'
    
    /* SMALL BUSINESS */
    WHEN LN_DESC IN ('SBDB', 'SMLBUS', 'GGSBDB')
    THEN 'Small Business Loan'
    
    /* COMMERCIAL & INDUSTRIAL */
    WHEN LN_DESC IN ('DEMAND', 'IBVRDM', 'INDBUS', 'ASSCOR', 'CONSUB', 'CITETC', 'TEN-LN', 'TP/PC', 'OTH-BR')
    THEN 'Commercial & Industrial'
    
    /* AGRICULTURE & RESOURCE */
    WHEN LN_DESC IN ('ROYFRM', 'ROYFRMD', 'RFRMRG', 'INDFSH', 'FSHDMD', 'GRNOTH', 'GRNWHT')
    THEN 'Agriculture & Resource'
    
    /* TRADE FINANCE */
    WHEN LN_DESC IN ('TB-DMD', 'TB-TER', 'TBPREC', 'TBTIME', 'B/ACAN')
    THEN 'Trade Finance'
    
    /* GOVERNMENT/BOND */
    WHEN LN_DESC IN ('G/GOTH', 'G/GUAR', 'PRVGOV', 'PSBPSP')
    THEN 'Government/Bond'
    
    /* US DOLLAR PRODUCTS */
    WHEN LN_DESC IN ('US-B/A', 'US-DMD', 'US-LIB', 'US-TRB', 'USTIME')
    THEN 'US Dollar Loan'
    
    /* SPECIALTY/POOLED/RECOURSE */
    WHEN LN_DESC IN ('PL-FP', 'PL_FR', 'PL-LP', 'PL-RR', 'CSBMSP', 'CSBPSP', 'ODWOCB')
    THEN 'Specialty/Pooled'
    
    /* STAFF */
    WHEN LN_DESC IN ('STAFF')
    THEN 'Staff Loan'
    
    ELSE 'Other'
END AS LOAN_CATEGORY, 